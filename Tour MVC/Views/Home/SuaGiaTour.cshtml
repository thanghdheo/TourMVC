@model QuanLyTour.Models.BangGiaVe

<h4>Bảng giá vé</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SuaGiaTour" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="MaBangGia" class="form-control" type="hidden"/>
            <input asp-for="MaTour" class="form-control" type="hidden"/>
            <div class="form-group">
                <label asp-for="Gia" class="control-label">Giá</label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianBatDau" class="control-label">Ngày bắt đầu</label>
                <input asp-for="ThoiGianBatDau" readonly class="form-control" />
                <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThoiGianKetThuc" class="control-label">Ngày kết thúc</label>
                <input asp-for="ThoiGianKetThuc" readonly style="background-color:	#C0C0C0" class="form-control" />
                <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Sửa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}